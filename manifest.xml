<?xml version="1.0" encoding="UTF-8"?>
<manifest>
  <project>
    <name>Strata</name>
    <id>strata-lang</id>
    <author>VSS.CO</author>
    <license>MIT</license>
    <homepage>https://github.com/VSS-CO/Strata</homepage>
    <repository>https://github.com/VSS-CO/Strata.git</repository>
  </project>

  <description>
    Strata is a statically-typed, deterministic programming language designed
    for clarity, predictability, and multi-target compilation.
  </description>

  <versioning>
    <current>0.1.0</current>
    <stability>experimental</stability>
    <release-channel>dev</release-channel>
  </versioning>

  <language>
    <paradigm>imperative</paradigm>
    <paradigm>procedural</paradigm>
    <typing>static</typing>
    <typing>strong</typing>
    <execution>compiled</execution>
  </language>

  <targets>
    <target>C</target>
    <target>JavaScript</target>
    <target>C++</target>
    <target>CSharp</target>
    <target>Shell</target>
    <target>Batch</target>
  </targets>

  <tooling>
    <component>lexer</component>
    <component>parser</component>
    <component>interpreter</component>
    <component>compiler</component>
    <component>cli</component>
    <component>language-server</component>
  </tooling>

  <syntax>
    <file-extension>.str</file-extension>
    <entry-point>main</entry-point>
  </syntax>

  <keywords>
    <keyword>programming-language</keyword>
    <keyword>compiler</keyword>
    <keyword>static-typing</keyword>
    <keyword>systems</keyword>
    <keyword>tooling-first</keyword>
  </keywords>

  <metadata>
    <created>2025</created>
    <maintained>true</maintained>
    <audience>developers</audience>
  </metadata>
</manifest>
